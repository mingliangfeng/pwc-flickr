<!-- search form -->
<form id="searh-form" accept-charset="UTF-8" class="form-horizontal">
  <h1 class="text-center">Search Flickr Photos</h1>
  <div class="input-group input-group-lg">
    <input type="text" name="q" placeholder="title, description or tags ..." class="form-control input-lg" />
    <span class="input-group-btn">
      <button type='submit' name='seach' id='search' class="btn btn-default btn-lg btn-search"><i class="glyphicon glyphicon-search"></i></button>
    </span>
  </div>
</form><!-- /.search form -->

<div class="search-results-wrapper"></div>

<% content_for :assets_js do %>
  <script type="text/javascript">

    $(document).ready(function() {
      Backbone.history.start({pushState: true});
      <% if @query.present? %>
      window.searchPhotos("<%= @query %>", <%= @page.presence || 1 %>);
      <% end %>
		});

  </script>
<% end %>
