<!-- search form -->
<%= form_tag root_path, method: :get, html: { class: 'form-horizontal' } do %>
  <h1 class="text-center">Search Flickr Photos</h1>
  <div class="input-group input-group-lg">
    <input type="text" name="q" placeholder="title, description or tags ..." class="form-control input-lg" />
    <span class="input-group-btn">
      <button type='submit' name='seach' class="btn btn-default btn-lg btn-search"><i class="glyphicon glyphicon-search"></i></button>
    </span>
  </div>
<% end %><!-- /.search form -->

<% if @search_result.present? %>
<div class="result-header clearfix">
  <h2>Search results for "<%= @search_result.query %>"</h2>
  <%= render "paginate" %>
</div>
<div class="search-results">
  <% @search_result.photos.each do |photo| %>
  <a href="<%= photo.url_big %>" data-lightbox="search_result" title="<%= photo.title %>">
    <img src="<%= photo.url_thumbnail %>" class="img-thumbnail img-responsive" alt="Responsive image">
  </a>
  <% end %>
</div>
<% end %>
